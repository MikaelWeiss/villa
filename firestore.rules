rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is a manager
    function isManager() {
      return request.auth != null && exists(/databases/$(database)/documents/managers/$(request.auth.token.email));
    }

    // Reports collection - tenants can manage their own reports, managers can view all
    match /reports/{reportId} {
      // Tenants can read, create, and update their own reports
      allow read: if request.auth != null &&
                     (request.auth.uid == resource.data.tenantID || isManager());
      allow create: if request.auth != null &&
                       request.resource.data.tenantID == request.auth.uid;
      allow update: if request.auth != null &&
                       (request.auth.uid == resource.data.tenantID || isManager());
      allow delete: if isManager();
    }

    // Managers collection - only readable by authenticated users
    match /managers/{email} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins should modify this via Firebase Console
    }

    // Report-Ticket collection (if used)
    match /Report-Ticket/{ticketId} {
      allow read, write: if request.auth != null;
    }
  }
}
